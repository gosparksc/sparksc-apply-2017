@import 'master.sss'

:root
  --banner-overlap: 80px
  --mobile-bp: 700px // Also change this value for @custom-media --mobile

  --one-col:
    margin: 0 auto
    max-width: 700px

@custom-media --mobile (max-width: 700px) // Also change this value for --mobile-bp
@custom-media --illustration (max-width: 900px)

body
  background-color: var(--spark-black)

.wrapper
  background-color: white

h2
  font-size: 1.5rem
  margin-bottom: -10px

h3
  font-size: 1.2rem
  margin-bottom: -10px
  margin-top: 0

a
  text-decoration: none

p a,
li a
  color: var(--spark-yellow)
  font-weight: bold

  &:hover
    color: var(--spark-yellow-dark)

.underline
  text-decoration: underline

header,
footer
  background-color: var(--spark-black)

header
  border-bottom: 10px solid var(--spark-yellow)
  color: white

footer
  border-top: 10px solid var(--spark-yellow)
  color: var(--spark-black-highlight)

  & a
    color: var(--spark-black-highlight)

  & .grid-row
    align-items: baseline
    padding: 0
    margin: 1rem auto

    @media (--mobile)
      display: block

    & > div
      width: 50%

      @media (--mobile)
        margin: 1.5rem auto 0
        width: 100%

      &.right
        text-align: right
        padding-bottom: 1.5rem

        @media (--mobile)
          text-align: center

      & button
        @media (--mobile)
          margin: auto

.section
  position: relative

  &.collage
    & img
      display: block
      width: 100%

  &#section-1
    // background-color: #eee

  &#section-2
    background-color: #f3f3f3

  &#section-4
    background-color: #f3f3f3

  &#section-5
    background-color: var(--spark-yellow)

.section-content
  margin: 0 auto
  max-width: 1000px
  padding: 2.5% 5%

  &.jumbotron
    padding-top: 70px
    padding-bottom: calc(20px + var(--banner-overlap))
    text-align: center

    & object
      max-width: 350px
      margin: 0 20px

    & h2
      margin-top: 2rem

    & h3
      color: var(--spark-yellow)
      margin-top: 0.5rem

  &.with-banner
    padding-top: 0

.card-content
  padding: 20px
  padding-top: 5px

.card-title,
.question-title
  margin-bottom: -12px
  margin-top: 15px

.question-title
  display: inline

.question
  background-color: var(--spark-yellow)
  width: 30px
  height: 30px
  border-radius: 30px
  display: inline-block
  position: absolute
  left: -50px

  @media (--illustration)
    display: block
    position: relative
    left: auto
    margin: 1rem 0 0.8rem

  & i
    padding-left: 10px
    padding-top: 7px

.question-par
  margin-top: 5px

.banner
  @apply --one-col

  background-color: white
  color: var(--spark-black)
  margin-bottom: -var(--banner-overlap) // Accounts for upwards translation
  position: relative
  padding: 3.5% 5% 35px
  top: -var(--banner-overlap)

p.note
  margin-top: 1rem
  text-align: center

.callout
  font-family: var(--merriweather)
  font-range: var(--mobile-bp) calc(var(--mobile-bp) + 200px)
  font-size: responsive 1.4rem 1.6rem
  font-style: regular
  font-weight: 900
  line-height: 2.4rem
  margin: 0 0 30px

  &.bottom
    text-align: center

/* Button */

button
  border: 0
  display: block
  margin: 0
  padding: 0

  &.fancy-button
    border-radius: 4px
    font-size: 1.2rem
    font-weight: 600
    padding: 16px 16px 15px
    text-align: center
    text-shadow: rgba(0, 0, 0, 0.1) 0 1px 1px
    transition: all 250ms ease-out-back
    max-width: 300px
    width: 100%

    & i
      margin-right: 0.5rem

    &:hover
      box-shadow: 0 8px 20px -2px rgba(0, 0, 0, 0.2)
      transform: scale(1.05)

    &:active
      box-shadow: 0 8px 20px -2px rgba(0, 0, 0, 0.2)
      transform: scale(0.98)

    &.apply
      background-color: var(--spark-yellow)
      color: white
      margin: 0 auto

    &.return
      background-color: var(--spark-black-well)

    &.disabled
      cursor: not-allowed

      &:hover
        box-shadow: none
        transform: none


/* Values */

.center
  text-align: center

span#blue
  background-color: blue
  width: 20px
  height: 20px
  border-radius: 20px
  display: inline-block
  margin-right: 20px

span#red
  background-color: red
  width: 20px
  height: 20px
  border-radius: 20px
  display: inline-block
  margin-right: 20px

span#green
  background-color: green
  width: 20px
  height: 20px
  border-radius: 20px
  display: inline-block
  margin-right: 20px

.key
  display: inline-block

.key-box
  display: inline-block
  padding-left: 80px

.key-box-first
  display: inline-block

.key-item
  padding-left: 30px
  margin-top: -3px
  font-weight: 700
  letter-spacing: 1.5px

h3.center
  font-size: 20px

a.nostyle
  color: #333

