/* Flex Grid */

.row
  @apply --one-col

  padding: 2.5% 0
  position: relative

  &.bottom
    padding: 25px 5%

  & > p
    font-range: 320px 350px
    font-size: responsive 1rem 1.2rem
    line-height: 1.6

.grid-row
  display: flex
  flex-direction: row
  flex-wrap: wrap
  justify-content: space-between
  padding: 2.5% 0

  &.halves > div
    padding: calc(var(--font-size) / 2) 0
    width: 48.75%

    @media (--mobile)
      width: 100%

  &.thirds > div
    width: 30%

    @media (--mobile)
      width: 100%

  & .main-row-item
    max-width: 400px
    margin: 0 auto

.card
  background-color: white
  margin-bottom: 2%
  border-radius: 5px
  border: 2px solid lightgrey
  cursor: pointer

  &:hover
    border: 2px solid #febb12

    & .fa
      color: #febb12

html#form
  margin: 0
  height: 100%
  overflow: hidden

  & iframe
    position: absolute 0
    border: 0
    z-index: 10

  & body
    background-color: #faf7ed

  & nav
    display: block
    position: absolute 20px 0 auto 0
    z-index: 100

    & .fancy-button
      color: white

      &.return
        background-color: var(--spark-yellow)
